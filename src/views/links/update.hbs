<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/update/{{link.id}}" method="POST">
            <div class="mb-3">
              <input
                type="text"
                class="form-control"
                name="title"
                value={{link.title}}
                autofocus
              />
            </div>
            <div class="mb-3">
              <input
                type="url"
                class="form-control"
                name="url"
                value={{link.url}}
              />
            </div>
            <div class="mb-3">
              <textarea
                class="form-control"
                name="description"
                rows="5"
              >{{link.description}}</textarea>
            </div>
            <div class="d-grid gap-2">
              <button class="btn btn-primary btn-block">Guardar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>